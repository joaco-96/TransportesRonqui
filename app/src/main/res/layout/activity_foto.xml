<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CapaPresentacion.FotoActivity">
    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingTop="@dimen/activity_vertical_margin"-->
    <!--tools:context="co.quindio.sena.obtenerimagenesfotogaleria.FotoActivity"-->



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GESTIONAR IMAGEN"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />


    <Button
        android:id="@+id/btnCargarImg1"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="onclick"
        android:text="Selecciona Imagen"
        android:textColor="#ffff" />

    <ImageView
        android:id="@+id/imagen1"
        android:layout_width="108dp"
        android:layout_height="87dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="98dp"
        android:layout_marginStart="18dp"
        android:src="@drawable/img_base" />

    <ImageView
        android:id="@+id/imagen2"
        android:layout_width="108dp"
        android:layout_height="87dp"
        android:layout_alignTop="@+id/imagen1"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/img_base" />

    <ImageView
        android:id="@+id/imagen3"
        android:layout_width="108dp"
        android:layout_height="87dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imagen1"
        android:layout_marginEnd="19dp"
        app:srcCompat="@drawable/img_base" />

    <Button
        android:id="@+id/btnCargarImg2"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:onClick="onclick"
        android:text="Selecciona Imagen"
        android:textColor="#ffff" />

    <Button
        android:id="@+id/btnCargarImg3"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="27dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="onclick"
        android:text="Selecciona Imagen"
        android:textColor="#ffff" />

</RelativeLayout>